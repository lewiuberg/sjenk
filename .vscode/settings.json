{
  // -------------------------------- PYTHON ---------------------------------
  "python.terminal.activateEnvironment": true,
  // -------------------------------- PYTEST ---------------------------------
  "testExplorer.useNativeTesting": true,
  // --------------------------------- MISC ----------------------------------
  "cSpell.words": [
    "addopts",
    "asyncio",
    "direnv",
    "docformatter",
    "isort",
    "levelname",
    "levelno",
    "McCabe",
    "pyflakes",
    "Pyupgrade",
    "pyyaml",
    "redoc",
    "sjenk",
    "sqlmodel",
    "testpaths"
  ],
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "Sjenk",
      "database": "sjenk.db"
    }
  ],
  "logViewer.watch": [
    {
      "groupName": "Sjenk",
      "watches": [
        {
          "title": "trace.log",
          "pattern": "**/trace.log"
        },
        {
          "title": "debug.log",
          "pattern": "**/debug.log"
        },
        {
          "title": "error.log",
          "pattern": "**/error.log"
        }
      ]
    }
  ],
  // TODO: is there a better way to fix config types?
  "python.analysis.typeCheckingMode": "off"
}
